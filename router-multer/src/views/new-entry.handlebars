<div class="container p-4">
    <form method="POST" action="/new-entry" class="card card-body" id="inputProduct">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="Entry title">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" id="description" placeholder="Entry description">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" name="price" id="price" placeholder="$">
        </div>
        <div class="form-group">
            <label for="thumbnail">Image</label>
            <input type="text" class="form-control" name="thumbnail" id="thumbnail" placeholder="http:/website.com">
        </div>
        <div class="form-group">
            <label for="code">Code</label>
            <input type="text" class="form-control" name="code" id="code" placeholder="Entry code">
        </div>
        <div class="form-group">
            <label for="stock">Stock</label>
            <input type="text" class="form-control" name="stock" id="stock" placeholder="Units">
        </div>
        <input type="submit" value="Save Product" class="btn btn-primary">
        
    </form>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/new-entry.js"></script>

